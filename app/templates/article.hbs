{{#if loading }}
  <h4>Loading...</h4>
{{else}}

  {{#if article}}
    {{#with article}}
    	<div class="article__wrapper {{#unless selected}} out-of-focus{{/unless}}">
        <article class="article" id="{{slug}}">
            <div class="article__header">
              <h1>{{title}}</h1>
            </div>

            <div class="article__content">{{{content}}}</div>
        </article>
      </div>
    {{/with}}
  {{else}}
  	<h2>Article not found</h2>
  {{/if}}

{{/if}}